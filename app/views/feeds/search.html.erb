<h5 class="mt-3 d-inline-block">SEARCH <small>in</small> <b class="text-blue"> <%= @search_in %> </b></h5>
  <%= link_to "Back", root_path, class: "btn btn-sm btn-primary float-right mt-3" %>
<hr/>
<h5> <small>Result for</small> <code><%= @search %></code></h5>
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Photos
    <span class="badge badge-primary badge-pill"><%= @photos.total_entries %></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Albums
    <span class="badge badge-primary badge-pill"><%= @albums.total_entries %></span>
  </li>
</ul>
<%= render  :template => "feeds/index" %>