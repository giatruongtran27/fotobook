<div class="container mt-3">
<h1>Editing Photo</h1>
<hr/>
<%= form_with(model: [@photo.user, @photo], local: true, :html => { :id => "form_new_photo" }) do |f| %>
<% if @photo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

  <ul>
    <% @photo.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control", placeholder: "title" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => "form-control", placeholder: "description"%>
    </div>
  </div>
</div>
<div class="d-flex justify-content-start form-group">
  <div class="col-up-load" id="col-input-file" style="display:none !important;">
    <div class="custom-file my-custom-file">
      <%= f.file_field :image , :class => "custom-file-input my-custom-file"%>
      <label class="custom-file-label my-custom-file" for="customFile">
        <i class="fa fa-plus"></i>
      </label>
    </div>
  </div>
  <div class="d-flex col-up-load" id="img_preview">
    <%= image_tag(@photo.image.url, width: 250, class: "img-fluid img-thumbnail") if @photo.image.exists? %>
    <a href="javascript:;" id="remove_img_edit_photo"><i class="fa fa-sm fa-close"></i></a>
  </div>
</div>
<div class="actions">
  <%= f.submit "Save" , :class => "btn btn-sm btn-success" %>
</div>
<% end %>
<hr>
<div class="mt-3">
  <%= link_to 'Show', user_photo_path(@photo.user, @photo), class: "btn btn-sm btn-info" %> |
  <%= link_to 'Back', user_photos_path, class: "btn btn-sm btn-primary" %>
</div>
</div>