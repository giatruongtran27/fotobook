<!DOCTYPE html>
<html>
<head>
  <title>Fotobook</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-blue custom">
    <%= link_to "Fotobook", root_path, class: "navbar-brand"%>
  </nav>
  <div class="container-fluid">
    <div class="row d-flex justify-content-center main-content-error">
      <%= yield %>
    </div>
  </div>
  <%= render "layouts/footer" %>
  <script>
   <%= sanitize custom_bootstrap_flash %>
 </script>
</body>
</html>
