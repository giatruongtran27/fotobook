var count_followings_tab = parseInt($('#counts-followings-tab').text()); 
var count_followers_tab = parseInt($('#counts-followers-tab').text()); 

$('#followers_<%= @follower.id %>').find('a.a-person-card-follow').addClass('following');
$('#followers_<%= @follower.id %>').find('a.a-person-card-follow').text('following');

<% if @at_your_profile %>
  $('#counts-followings-tab').text(count_followings_tab + 1);
  var followings_container = $('.profiles-content-wrapper-followings');
  followings_container.append('<%= escape_javascript render(:partial => "users/follow_components/card", :locals => { follower: @follower, user: @user, type: "followings" }) %>');
<% end %>

<% if @at_follower_profile %>
  $('#counts-followers-tab').text(count_followers_tab + 1);
  var followers_container = $('.profiles-content-wrapper-followers');
  followers_container.append('<%= escape_javascript render(:partial => "users/follow_components/card", :locals => { follower: current_user, user: @user, type: "followers" }) %>');
  $('.a-person-card-follow.profile-card-follow').addClass('following').text('following');
<% end %>

var href = '/users/<%= @user.id %>/follow/<%= @follower.id %>';
$('a[href$="'+ href +'"]').addClass('following').text('following');

toastr['success']('You have followed <%= @follower.full_name %>');
