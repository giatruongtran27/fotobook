<div class="container">
<h1 class="mt-3">Albums</h1>
<table class="table table-hover">
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to 'Show', user_album_path(album.user,album),  class: "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_user_album_path(album.user,album), :"data-turbolinks" => false,  class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', [album.user, album], method: :delete, data: {"confirm" => "Are you sure?"}, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<%= link_to 'New Album', new_user_album_path, :"data-turbolinks" => false,  class: "btn btn-sm btn-info"%>
