<h2 class="mt-3 mb-3">Editing Album</h2>
<hr>
<%= render 'form', album: @album %>
<hr>
<div id="content">
  <%= form_for :photo, :url => {:controller => "photos", :action => "add_image", :album_id => @album.id}, html: { multipart: true, class: "dropzone", id: "my-dropzone-album" } do |f| %>
    <div class="dz-message needsclick">
      <h3>Add or Remove Images of Album here</h3>
      <!-- or -->
      <!-- <strong>click</strong> to upload -->
    </div>
    <div class="fallback">
      <%= f.file_field :image %>
      <%= f.submit "Upload the Image" %>
    </div>
  <% end %>
</div>
<hr>
<%= link_to 'Show', @album, class: "btn btn-sm btn-info" %> |
<%= link_to 'Back', albums_path, class: "btn btn-sm btn-primary" %>
