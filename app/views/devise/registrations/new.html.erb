<div class="container">
  <h1 class="text-center title-sign-up">Fotobook Signup</h1>
  <div class="row justify-content-center">
    <div class="col-md-6 sign-up-wrap">
      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label t('.email') %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.label t('.first_name') %>
        <%= f.text_field :first_name, placeholder: t('.first_name'),:class => 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label t('.last_name') %>
        <%= f.text_field :last_name, placeholder: t('.last_name'),:class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label t('.password') %>
        <% if @minimum_password_length %>
        <em>(<%= t(".characters_minimum", minimum_password_length:@minimum_password_length) %> )</em>
        <% end %><br />
        <%= f.password_field :password, :class => 'form-control', autocomplete: "new-password", placeholder: t('.password') %>
      </div>
      <div class="form-group">
        <%= f.label t('.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "new-password", placeholder: t('.password_confirmation') %>
      </div>
      <div class="actions">
        <%= f.submit t(".sign_up"), :class => "btn btn-primary btn-sign-up" %>
      </div>
      <% end %>
      <!--End Form -->
    </div>
  </div>
  <div class="row justify-content-center">
    <%= render "devise/shared/links" %>
  </div>
</div>

